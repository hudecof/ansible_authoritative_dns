// {{ ansible_managed }}
options {
        directory "/etc/zones";
        pid-file "/var/run/named/named.pid";

        auth-nxdomain no;    # conform to RFC1035
        recursion       no;
        allow-query     { none; };
        allow-transfer  { none; };
        allow-update    { none; };
        
        listen-on { {{ dns_listen_ipv4|join('; ') }}; }; 

        listen-on-v6 { {{ dns_listen_ipv6|join('; ') }}; };

        version "{{ dns_version }}";
        minimal-responses       yes;
};
